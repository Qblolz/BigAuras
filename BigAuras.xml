<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="BigAuras.lua"/>
	<Script file="BigAurasOptions.lua"/>

	<Frame name="AuraFrameTemplate" virtual="true">
		<Size>
            <AbsDimension x="36" y="36"/>
        </Size>
		<Anchors>
            <Anchors>
                <Anchor point="CENTER"/>
            </Anchors>
        </Anchors>
        <Layers>
            <Layer level="BORDER">
                <Texture name="$parentIcon" parentKey="Icon">
                </Texture>
            </Layer>
			<Layer level="OVERLAY">
                <FontString name="$parentText" parentKey="Text" inherits="GameFontNormalLarge">
					<Color r="1" g="1" b="1" a="1"/>
                </FontString>
            </Layer>
        </Layers>
		<HighlightTexture/>
        <PushedTexture/>
        <Frames>
            <Cooldown parentKey="Cooldown" drawBling="false" drawEdge="false" reverse="true" inherits="CooldownFrameTemplate">
				<Size x="36" y="36"/>
                <Anchors>
                    <Anchor point="CENTER" x="0" y="0"/>
                </Anchors>
				<SwipeTexture file="Interface\PlayerFrame\DK-Blood-Rune-CDFill"/>
            </Cooldown>
        </Frames>
        <Scripts>
            <OnUpdate>
				BigAuras_OnUpdate(self, elapsed)
            </OnUpdate>
        </Scripts>
    </Frame>
    <Frame name="BigAuras">
        <Scripts>
			<OnLoad>
				Mixin(self, BigAuras)
				BigAuras:OnLoad(self)
			</OnLoad>
        </Scripts>
    </Frame>
	
</Ui>
